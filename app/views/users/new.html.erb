<% provide(:title, "Sign Up") %>
<h1>Sign up</h1>


<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= render 'shared/error_messages' %>

    <%= form_for(@user) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class:"form-control input-sm" %>

      <%= f.label :email %>
      <%= f.email_field :email, class:"form-control input-md" %>

      <%= f.label :password %>
      <%= f.password_field :password, class:"form-control input-md" %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class:"form-control input-md" %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>



    <% end %>

  </div>
</div>
